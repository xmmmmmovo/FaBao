<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/guillotine_background"
    android:orientation="vertical">



    <android.support.v7.widget.Toolbar
        style="@style/Toolbar"
        app:contentInsetStart="0dp">

        <ImageView
            android:id="@+id/guillotine_hamburger"
            style="@style/ImageView.Hamburger"
            android:src="@drawable/ic_menu" />
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.qintong.library.InsLoadingView
            android:id="@+id/loading_view"
            android:layout_height="170dp"
            android:layout_width="170dp"
            android:layout_centerInParent="true"
            android:src="@drawable/icon"
            app:status="loading"/>
    </RelativeLayout>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/color_selector"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="15dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        tools:targetApi="lollipop">
        <LinearLayout
            android:id="@+id/profile_group"
            style="@style/LinearLayout.GuillotineItem"
            android:layout_marginTop="1dp">
            <ImageView
                style="@style/ImageView.GuillotineItem"
                android:src="@drawable/ic_profile" />

            <com.example.lab.android.nuc.law_analysis.utils.views.CanaroTextView
                android:id="@+id/text_1"
                style="@style/TextView.GuillotineItem"
                android:text="@string/profile" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/color_selector"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        app:cardCornerRadius="15dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        tools:targetApi="lollipop">

        <LinearLayout
            android:id="@+id/feed_group"
            style="@style/LinearLayout.GuillotineItem"
            android:layout_marginTop="0dp">

            <ImageView
                style="@style/ImageView.GuillotineItem"
                android:src="@drawable/ic_feed" />

            <com.example.lab.android.nuc.law_analysis.utils.views.CanaroTextView
                style="@style/TextView.GuillotineItem"
                android:text="@string/feed" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/color_selector"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        app:cardCornerRadius="15dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        tools:targetApi="lollipop">
        <LinearLayout
            android:id="@+id/activity_group"
            style="@style/LinearLayout.GuillotineItem"
            android:layout_marginTop="0dp">

            <ImageView
                style="@style/ImageView.GuillotineItem"
                android:src="@drawable/ic_settings" />

            <com.example.lab.android.nuc.law_analysis.utils.views.CanaroTextView
                style="@style/TextView.GuillotineItem"
                android:text="@string/activity" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/color_selector"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        app:cardCornerRadius="15dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        tools:targetApi="lollipop">
        <LinearLayout
            android:id="@+id/settings_group"
            style="@style/LinearLayout.GuillotineItem"
            android:layout_marginTop="0dp">

            <ImageView
                style="@style/ImageView.GuillotineItem"
                android:src="@drawable/ic_settings" />

            <com.example.lab.android.nuc.law_analysis.utils.views.CanaroTextView
                style="@style/TextView.GuillotineItem"
                android:text="@string/settings" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageView
        android:id="@+id/image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        android:background="@drawable/icon" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:orientation="vertical">

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="马骕骎"
                android:layout_alignParentLeft="true"
                android:textColor="#f9b516" />

            <com.example.lab.android.nuc.law_analysis.utils.views.RoundImageView
                android:id="@+id/country_picture"
                android:layout_width="20dp"
                android:layout_height="19dp"
                android:src="@drawable/hebei"
                android:scaleType="centerInside"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:textSize="14sp"
            android:text="@string/text_detail" />

        <com.example.lab.android.nuc.law_analysis.utils.tools.NineGridTestLayout
            android:id="@+id/layout_nine_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:sapcing="4dp" />

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10分钟前" />


            <com.sackcentury.shinebuttonlib.ShineButton
                android:id="@+id/po_image1"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@android:color/darker_gray"
                app:btn_color="@android:color/darker_gray"
                app:btn_fill_color="@color/orange"
                app:allow_random_color="true"
                app:siShape="@raw/like"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@+id/time"
                android:layout_marginLeft="30dp" />
            <TextView
                android:id="@+id/like_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/po_image1"/>

            <ImageView
                android:id="@+id/comment"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_toRightOf="@+id/like_size"
                android:layout_marginLeft="40dp"
                android:src="@drawable/ic_comment"
                />
            <ImageView
                android:id="@+id/transmmit"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_toRightOf="@+id/comment"
                android:layout_marginLeft="40dp"
                android:src="@drawable/ic_trans"/>

        </RelativeLayout>


    </LinearLayout>
</LinearLayout>